<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/propertymangementdashboard"
    tools:context=".ManagementDashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="288dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                android:text=""
                />


        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="65dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"

                    android:padding="16dp">


                    <ImageButton
                        android:id="@+id/propertyImg"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/properties">

                    </ImageButton>

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="PROPERTY MANAGER"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="65dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/TenantImg"
                        android:layout_width="130dp"
                        android:layout_height="92dp"
                        android:background="@drawable/tenants">

                    </ImageView>

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="TENANTS"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="65dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/maintenanceImg"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:background="@drawable/maintenance" />

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="MAINTENANCE"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="65dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/mainProfileImg"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:background="@drawable/mainprofile" />

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="PROFILE"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>


</RelativeLayout>